<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.etjava.mapper.FrameworkTypeMapper">

    <select id="list" parameterType="Map" resultType="FrameworkType">
        select * from t_framework_type
        <where>
            <if test="typeName!=null">
                and typeName like concat('%',#{typeName},'%')
            </if>
            <if test="isShow==null">
                and isShow=1
            </if>
            <if test="isShow!=null">
                and isShow=#{isShow}
            </if>
        </where>
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>

    <select id="total" parameterType="Map" resultType="Integer">
        select count(*) from t_framework_type
        <where>
            <if test="typeName!=null">
                and typeName like concat('%',#{typeName},'%')
            </if>
            <if test="isShow==null">
                and isShow=1
            </if>
        </where>
    </select>

    <select id="findById" parameterType="Integer" resultType="FrameworkType">
        select * from t_framework_type where id=#{id}
    </select>
</mapper>