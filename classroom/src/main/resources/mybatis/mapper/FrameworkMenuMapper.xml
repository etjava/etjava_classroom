<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.etjava.mapper.FrameworkMenuMapper">

    <select id="menuList" resultType="FrameworkMenu" parameterType="Map">
        select * from t_framework_tree_menu
        <where>
            <if test="title!=null">
                and title like concat('%',#{title},'%')
            </if>
        </where>
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>

    <select id="total" resultType="Integer" parameterType="Integer">
        select count(1) from t_framework_tree_menu
        <where>
            <if test="title!=null">
                and title like concat('%',#{title},'%')
            </if>
        </where>
    </select>

    <select id="findParent" resultType="FrameworkMenu" parameterType="Integer">
        select * from t_framework_tree_menu where pId=-1 and tId=#{tId}
    </select>

    <select id="findChildren" resultType="FrameworkMenu" parameterType="Integer">
        select * from t_framework_tree_menu where pId=#{pId}
    </select>
</mapper>